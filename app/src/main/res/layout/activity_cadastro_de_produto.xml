<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.CadastroDeProdutoActivity">

    <TextView
        android:id="@+id/tv_prod_nome"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:background="#51B9B0B0"
        android:fontFamily="monospace"
        android:text="Nome"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_prod_qtd"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#51B9B0B0"
        android:fontFamily="monospace"
        android:textStyle="bold"
        android:text="Quantidade"
        app:layout_constraintEnd_toEndOf="@+id/tv_prod_nome"
        app:layout_constraintStart_toStartOf="@+id/tv_prod_nome"
        app:layout_constraintTop_toBottomOf="@+id/tv_prod_nome" />

    <TextView
        android:id="@+id/tv_prod_vol"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#51B9B0B0"
        android:fontFamily="monospace"
        android:textStyle="bold"
        android:text="Volume"
        app:layout_constraintEnd_toEndOf="@+id/tv_prod_qtd"
        app:layout_constraintStart_toStartOf="@+id/tv_prod_qtd"
        app:layout_constraintTop_toBottomOf="@+id/tv_prod_qtd" />

    <TextView
        android:id="@+id/tv_prod_preco"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#51B9B0B0"
        android:fontFamily="monospace"
        android:textStyle="bold"
        android:text="Preço/m³"
        app:layout_constraintEnd_toEndOf="@+id/tv_prod_vol"
        app:layout_constraintStart_toStartOf="@+id/tv_prod_vol"
        app:layout_constraintTop_toBottomOf="@+id/tv_prod_vol" />


    <TextView
        android:id="@+id/tv_prod_categoria"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#51B9B0B0"
        android:fontFamily="monospace"
        android:textStyle="bold"
        android:text="Categoria"
        app:layout_constraintEnd_toEndOf="@+id/tv_prod_preco"
        app:layout_constraintStart_toStartOf="@+id/tv_prod_preco"
        app:layout_constraintTop_toBottomOf="@+id/tv_prod_preco" />

    <EditText
        android:id="@+id/et_cadastro_nome_produto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="12sp"
        android:background="#51B9B0B0"
        android:fontFamily="monospace"
        app:layout_constraintBottom_toBottomOf="@+id/tv_prod_nome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_prod_nome"
        app:layout_constraintTop_toTopOf="@+id/tv_prod_nome" />

    <EditText
        android:id="@+id/et_cadastro_quantidade_produto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="12sp"
        android:background="#51B9B0B0"
        android:fontFamily="monospace"
        app:layout_constraintBottom_toBottomOf="@+id/tv_prod_qtd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_prod_qtd"
        app:layout_constraintTop_toTopOf="@+id/tv_prod_qtd" />

    <EditText
        android:id="@+id/et_cadastro_volume_produto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="14sp"
        android:background="#51B9B0B0"
        android:fontFamily="monospace"
        app:layout_constraintBottom_toBottomOf="@+id/tv_prod_vol"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_prod_vol"
        app:layout_constraintTop_toTopOf="@+id/tv_prod_vol" />

    <EditText
        android:id="@+id/et_cadastro_preco_produto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="12sp"
        android:background="#51B9B0B0"
        android:fontFamily="monospace"
        app:layout_constraintBottom_toBottomOf="@+id/tv_prod_preco"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_prod_preco"
        app:layout_constraintTop_toTopOf="@+id/tv_prod_preco" />

    <Spinner
        android:id="@+id/sp_cadastro_categoria_produto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:hint="Telefone"
        app:layout_constraintBottom_toBottomOf="@+id/tv_prod_categoria"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/tv_prod_categoria"
        app:layout_constraintTop_toTopOf="@+id/tv_prod_categoria"/>


    <Button
        android:id="@+id/btn_confere_saida_conferir"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="8dp"
        android:onClick="cadastrarProduto"
        android:text="Salvar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sp_cadastro_categoria_produto" />
</androidx.constraintlayout.widget.ConstraintLayout>